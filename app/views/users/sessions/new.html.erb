<%= render "shared/second.header"%>
<div class="plans-field plans-field-new">
  <div class="login-forms">
    <p class="info-input-haedline">Log in</p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="one-input-partsone-input-parts parts-margin">
        <%= f.label :email %><br />
        <%= f.email_field :email,class:"input-default", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="one-input-partsone-input-parts parts-margin">
        <%= f.label :password %><br />
        <%= f.password_field :password, class:"input-default",autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in",class:"btn" %>
    </div>
  </div>
<% end %>
</div>

<%= render "users/shared/links" %>
