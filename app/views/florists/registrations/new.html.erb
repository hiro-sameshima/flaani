<%= render "shared/second.header"%>
<div class="plans-field plans-field-new">
  <div class="login-forms">
  <p class="info-input-haedline">Sign Up</p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "florists/shared/error_messages", resource: resource %>
<%# 画像登録 %>
      <div class="one-input-parts">
        <div class="field">
        大切な人の写真
        <span class="">必須</span>
        </div>
      <div class="">
        <div class="text">
          クリックしてファイルをアップロード
        </div>
        <%= f.file_field :avatar, id:"item-image" %>
      </div>
  </div>
    <%# /画像 %>
      <div class="one-input-partsone-input-parts parts-margin">
        <%= f.label :shop_name,class:"form-text" %><br />
        <%= f.text_field :shop_name, autofocus: true, autocomplete: "shop_name" %>
      </div>

      <div class="one-input-partsone-input-parts parts-margin">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="one-input-partsone-input-parts parts-margin">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="one-input-partsone-input-parts parts-margin">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class:"btn" %>
      </div>
    </div>
  <% end %>
</div>
