 <%= render "shared/second.header"%>
 <div class="main-contents"><%#大括り%>
    <div class="person-links"><%#リンク部分の括り%>
      <div class="link-box"><%= link_to "大切な人を登録する",  new_dear_person_path ,class:'person-edit-link'%></div>
      <div class="link-box"><%= link_to "マイページを編集する", edit_user_registration_path,class:'person-edit-link'%></div>
    </div>

   <div class="person-contents">
     <ul class='person-lists'>
       <li class='person-list'>
          <% @dear_persons.each do |person| %>
            <% if person.user_id == @user.id %>
               <div class="person-box">
                    <%= link_to image_tag( person.image,size: '400x400'),dear_person_path(person.id), class:'.dear-person-image'%>
                  <div class="person-list-parameters">
                    <%= person.nick_name%>
                  </div>
              </div>
            <% else %>
            <% end %>
          <%end%><%# personのeach%>
       </li>
     </ul>
    </div>
 </div>
  <%= render "shared/second.footer" %>