dear_person#new
<%= form_with model:@dear_person,  local: true do |form| %>
  <%# フォームの内部 %>
   <%# 出品画像 %>
    <div class="">
      <div class="">
        大切な人の写真
        <span class="">必須</span>
      </div>
      <div class="">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= form.file_field :image, id:"item-image" %>
      </div>
    </div>
    <%# /出品画像 %>
  <%# １つのフォーム始まり %>
  <div class="one-input-parts">
    <div class="">
      名前を入力してください
      <span class="indispensable">必須</span>
    </div> 
    <%= form.text_field :nick_name, placeholder: "ニックネーム" %>
  </div>
  <%# １つのフォーム終わり %>

  <%# １つのフォーム始まり %>
  <div class="one-input-parts">
    <div class="">
      名字を入力してください
      <span class="indispensable">必須</span>
    </div> 
    <%= form.text_field :family_name, placeholder: "例)田中" %>
    <%= form.text_field :last_name, placeholder: "例)ハナコ" %>
  </div>
  <%# １つのフォーム終わり %>

  <%# １つのフォーム始まり %>
  <div class="one-input-parts">
    <div class="">
      名字のカナ入力してください
      <span class="indispensable">必須</span>
    </div> 
    <%= form.text_field :family_name_kana, placeholder: "例)タナカ" %>
    <%= form.text_field :last_name_kana, placeholder: "例)ハナコ" %>
  </div>
  <%# １つのフォーム終わり %>

  <%# １つのフォーム始まり %>
   <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">生年月日</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
        form.date_select(
          :birthday,
          class:'select-birth',
          id:"birth-date",
          use_month_numbers: true,
          prompt:'--',
          start_year: 1930,
          end_year: (Time.now.year - 5),
          date_separator: '%s'),
        "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
    <p class='info-text'>※ 本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。</p>
  </div>
  <%# １つのフォーム終わり %>

  <%# １つのフォーム始まり %>
   <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">記念日</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
        form.date_select(
          :anniversary,
          class:'select-birth',
          id:"birth-date",
          use_month_numbers: true,
          prompt:'--',
          :discard_year => true,
          date_separator: '%s'),
        "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
    <p class='info-text'>※ 本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。</p>
  </div>
  <%# １つのフォーム終わり %>
  <div class=''>
    <%= form.submit "登録" ,class:"" %>
  </div>
<% end %>